<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PickAndGo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Erik.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PickAndGo.styles.css" asp-append-version="true" />
</head>
<body style="margin-bottom: 0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo-v3.PNG" class="w-75" >
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Overview">Overview</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Orders">Existing Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Ingredients">Ingredients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="CustomerList">Customers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Transactions">Transactions</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Roles</a>
                            </li>
                            <li>
                                <a asp-area="" class="nav-link text-dark" asp-controller="UserRole" asp-action="Index">User Roles</a>
                           </li>

                        }
                        @if (User.IsInRole("Customer")){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="CustomerDetails">Profile</a>
                            </li>
                            <li class="nav-item">
                                 <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">Start Order</a>
                             </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Customize">Customize</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="flex-column container" style="margin-bottom: 200px">
        <main role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="bottom-0 bg-dark text-light py-4">
        <div class="container-fluid pt-5 pb-5">
            <div class="row text-center">
                <p class="d-flex justify-content-center">
                    &copy; 2023 PickAndGo Corporation
                    <!--list-unstyled d-flex justify-content-center-->
                    @if(!User.IsInRole("Admin") && !User.IsInRole("Customer"))
                    {
                            <ul class="list-unstyled d-flex justify-content-center">
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Customize">Customize</a>
                                </li>
                            </ul>
                    }
                    @if (User.IsInRole("Customer") && !User.IsInRole(""))
                    {
                            <ul class="list-unstyled d-flex justify-content-center">
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Customize">Customize</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Customer" asp-action="CustomerDetails">Profile</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Index">Start Order</a>
                                </li>

                            </ul> 
                    }
                    @if (User.IsInRole("Admin") && !User.IsInRole("") && !User.IsInRole("Customer"))
                    {
                        <div class="col-md-4 col-xs-12">
                            <ul class="list-unstyled list-inline">
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Customize">Customize</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <ul class="list-unstyled list-inline">
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Overview">Overview</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Orders">Existing Orders</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Ingredients">Ingredients</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <ul class="list-unstyled list-inline">
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="CustomerList">Customers</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Transactions">Transactions</a>
                                </li>
                                <li class="mx-3">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Role" asp-action="Index">Roles</a>
                                </li>
                            </ul>
                        </div>
                    }
                    <ul class="list-unstyled d-flex justify-content-center">
                        <li class="mx-3">
                            <a href="#" class="pull-right text-light text-decoration-none">Back To Top</a>
                        </li>
                    </ul>
                </p>
            </div>
        </div>
    </footer>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
