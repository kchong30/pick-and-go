@model PickAndGo.ViewModels.UserRoleVM

@{
    ViewData["Title"] = "Assign Roles";
}

<main class="md-screen">

    <h1>User Role</h1>

    <div class="row">
        <div class=" ">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly"
                     class="text-danger">
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label visually-hidden"></label>

                    @Html.DropDownList("Email", new SelectList(ViewBag.UserSelectList, "Value", "Text", ViewBag.SelectedUser),
                    "Select User", new { @id = "userDD", @class = "form-control", @hidden = "true" })

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Role" class="control-label"></label>
                    @Html.DropDownList("Role",
                    new SelectList(ViewBag.RoleSelectList, "Value", "Text"),
                    "Select Role",
                    new { @id = "roleDD", @class = "form-control"})
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-group  d-flex gap-2">
                    <input type="submit" value="Assign" class="btn btn-primary w-100 p-2" />
                    <a type="button" class="btn btn-outline-primary w-100 p-2" asp-action="Index">Back To Existing Users </a>
                </div>
            </form>
        </div>
    </div>

</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
