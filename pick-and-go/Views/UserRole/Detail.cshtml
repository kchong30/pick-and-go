@model IEnumerable<PickAndGo.ViewModels.RoleVM>

@{
    ViewData["Title"] = "User Role Details";
}

<main class="md-screen">
    <div class="d-flex flex-column">
        <h3 class="text-center">@ViewBag.UserName</h3>
        <p class="text-end">
            <a type="button" class="btn btn-primary" asp-action="Create" asp-route-userName=@ViewBag.UserName>Assign Roles</a>
        </p> 

        <table class="table">
            <thead class="table-heading">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RoleName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr class="align-middle">
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleName)
                        </td>
                        <td class="text-end">
                            <a type="button" class="btn btn-sm btn-outline-primary" asp-action="Delete" asp-route-email=@ViewBag.UserName asp-route-roleName=@item.RoleName>Remove Role</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a type="button" class="btn btn-outline-primary" asp-action="Index">Back To Existing Users</a>
        </div>
    </div>

</main>