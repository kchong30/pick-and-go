@model PickAndGo.ViewModels.RoleVM

@{
    ViewData["Title"] = "Create Role";
}

<main>
    <div class="d-flex flex-column w-50 m-auto">
        <div class="w-100 d-flex flex-column justify-item-center">
            <div>

                <h1>Create New Role</h1>

                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="RoleName" class="control-label"></label>
                                <input asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary button-120" />
                                <a type="button" class="btn btn-outline-secondary button-120" asp-action="Index">Back to Roles</a>
                            </div>
                        </form>
                        @Html.AntiForgeryToken()
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
