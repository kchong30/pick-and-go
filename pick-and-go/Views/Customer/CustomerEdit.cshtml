@using PickAndGo.ViewModels
@model CustomerVM

@{
    ViewData["Title"] = "Edit Customer";

}

<head>
    <link rel="stylesheet" href="~/css/Erik.css" asp-append-version="true" />
</head>

<form method="post" asp-action="CustomerEdit" enctype="multipart/form-data">
    <div class="header-titles">
        <h1>Change Profile Details</h1>
        <h2 class="header-name-edit">Edit Info For @Html.DisplayFor(model => model.EmailAddress)</h2>
    </div>
    <div class="the-form">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" placeholder="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" placeholder="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
@ViewBag.Message
