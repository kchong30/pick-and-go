@using PickAndGo.ViewModels;
@model IEnumerable<IngredientListVM>

@{
    ViewData["Title"] = "Ingredients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h1>Ingredients</h1>

<p>
    <a asp-action="IngredientsCreate">Create New</a>
</p>

<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="accordion" id="PickAndGoAccordion">

            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.CategoryId</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@cat.CategoryId" aria-expanded="false" aria-controls="@cat.CategoryId"></button>
                    </td>
                </tr>

                <tr id="@cat.CategoryId" class="accordion-collapse collapse" aria-labelledby="PickAndGoAccordion">

                    <td class="accordion-detail accordion-body" colspan="8">
                        <table class="accordion-table container">
                            @if (cat.Ingredients.Count > 0)
                            {
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>In Stock</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            }
                            @foreach (var ing in cat.Ingredients)
                            {   
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td class="celldesc">@ing.Description</td>
                                    <td>@ing.Price</td>
                                    <td><img class="stock-icon" src="../images/@ing.InStockIcon"/></td>
                                    <td>
                                        <a asp-action="IngredientsEdit" asp-route-id="@ing.IngredientId">Edit</a> |
                                        <a asp-action="IngredientsDetails" asp-route-id="@ing.IngredientId">Details</a> |
                                        @if (!ing.OutstandingOrders)
                                        {
                                            var dataTargetConfirm = "#ModalYes" + ing.IngredientId;
                                            var modalID = "ModalYes" + ing.IngredientId;
                                            <a asp-action="IngredientsDelete" asp-route-id="@ing.IngredientId" data-bs-toggle="modal" data-bs-target="@dataTargetConfirm">Delete</a>

                                            @using (Html.BeginForm("IngredientsDelete", "Admin", new
                                            {
                                                id = @ing.IngredientId,
                                                category = @ing.CategoryId
                                            }, FormMethod.Post))
                                            {
                                                <!-- Modal -->
                                                <div class="modal fade" id=@modalID tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="confirmModalLabel">Delete this ingredient?</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <table class="modal-table">
                                                                    <tr>
                                                                        <td>Ingredient:</td>
                                                                        <td>@ing.Description</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>From category:</td>
                                                                        <td>@ing.CategoryId</td>
                                                                    </tr>
                                                                </table>
                                                                <p>Are you sure you want to delete this ingredient?</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                                                <button type="submit" class="btn btn-primary">Yes</button>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            }
                                        }
                                        else {
                                            <a asp-action="IngredientsDelete" asp-route-id="@ing.IngredientId" aria-current="page">Delete</a>
                                        }
                                    </td>
                                    <td></td>
                                </tr>
                            }
                        </table>
                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>  
@ViewBag.Message
