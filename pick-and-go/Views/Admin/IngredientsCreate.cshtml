@model IngredientVM
@using PickAndGo.ViewModels

@{
    ViewData["Title"] = "IngredientsCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Add a new ingredient</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IngredientsCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.categories">
                    <option value="">Please Select One</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredientInStock" class="control-label">In Stock</label>
                @Html.CheckBoxFor(model => model.IngredientInStock)
            </div>
            <div class="form-group">
                <label asp-for="IngredientImage" class="control-label">Image URL</label>
                <input asp-for="IngredientImage" class="form-control" />
                <span asp-validation-for="IngredientImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />

                <a type="button" class="btn btn-outline-secondary" asp-action="Ingredients">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
