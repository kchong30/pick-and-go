@model IngredientVM
@using PickAndGo.ViewModels

@{
    ViewData["Title"] = "Ingredient Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<main class="ingredient-detail md-screen">
    <h1>Ingredient Details</h1>
    <div class="d-flex flex-column align-items-center">
        <div>
            <dl class="row">
                <dt class="col-sm-5 pb-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-7 pb-3">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-5 pb-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-7 pb-3">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-5 pb-2">
                    In Stock
                </dt>
                <dd class="col-sm-7 pb-3">
                    <img class="stock-icon" src="~/images/@Model.InStockIcon" />
                </dd>
                <dt class="col-sm-5 pb-2">
                    Category
                </dt>
                <dd class="col-sm-7 pb-3">
                    @Html.DisplayFor(model => model.CategoryId)
                </dd>
                <dt class="col-sm-5 pb-2">
                    Image URL
                </dt>
                <dd class="col-sm-7 pb-3">
                    @Html.DisplayFor(model => model.IngredientImage)
                </dd>
            </dl>
        </div>
        <div class=" d-flex gap-2 w-100">
            <a type="button" class="btn btn-primary w-100 p-2" asp-action="IngredientsEdit" asp-route-id="@Model?.IngredientId">Edit</a>
            <a type="button" class="btn btn-outline-primary w-100 p-2" asp-action="Ingredients">Back to List</a>
        </div>
    </div>

    @ViewBag.Message

</main>