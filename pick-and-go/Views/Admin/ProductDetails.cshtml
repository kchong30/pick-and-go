@model Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>Details</h1>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Image URL
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            Base Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BasePrice)
        </dd>
        
    </dl>
</div>

<div>
    <a type="button" class="btn btn-outline-secondary" asp-action="ProductEdit" asp-route-productId="@Model?.ProductId">Edit</a>
    <a type="button" class="btn btn-outline-secondary" asp-action="Products">Back to List</a>
</div>

@ViewBag.Message



