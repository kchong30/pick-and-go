@model Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<main class="md-screen">
    <h1>Edit Product</h1>
    <div class="w-100 d-flex flex-column align-items-center">
        <form asp-action="ProductEdit">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasePrice" class="control-label">Base Price</label>
                <input asp-for="BasePrice" class="form-control" />
                <span asp-validation-for="BasePrice"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Image URL</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image"></span>
            </div>
            <div class="form-group d-flex gap-2">
                <input type="submit" value="Save" class="btn btn-primary w-100 p-2" />
                <a type="button" class="btn btn-outline-primary w-100 p-2" asp-action="Products">Back to List</a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
