
@using PickAndGo.ViewModels
@model CustomerVM



@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>Details</h1>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Email Address
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Last Ordered On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastOrdered)
        </dd>
        <dt class="col-sm-2">
            Date Signed Up
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SignedUp)
        </dd>
    </dl>
</div>
<div>
    <a type="button" class="btn btn-outline-secondary" asp-action="History" asp-controller="Order" asp-route-customerId="@Model?.CustomerId">View History</a>
    <a type="button" class="btn btn-outline-secondary"  asp-action="CustomerList">Back to List</a>
</div>
@ViewBag.Message



